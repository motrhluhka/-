import math
epsilon = 1e-6 # Задаем точность
n = 1 # Начинаем с первого члена ряда
sum = 0 # Инициализируем сумму
term = (-1)**n*3**(2*n-1) / math.factorial(n) # Вычисляем первый член ряда

while abs(term) &gt;= epsilon: # Пока абсолютное значение члена больше или
равно точности
sum += term # Прибавляем член к сумме
n += 1 # Переходим к следующему члену
term = (-1)**n*3**(2*n-1) / math.factorial(n) # Вычисляем следующий член
print(f&quot;Сумма ряда с точностью {epsilon}: {sum}&quot;) # Выводим результат
